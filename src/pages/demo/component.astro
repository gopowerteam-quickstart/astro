---
import Test from '@/components/widgets/Test.vue'
import MainLayout from '@/layouts/MainLayout.astro'
import { Code } from 'astro/components'
---

<MainLayout title="组件" spaceY={2}>
  <div class="card">
    <div class="title">Vue组件</div>
    <div class="description">可以在代码中直接使用Vue组件进行开发</div>
    <div class="code">
      <div class="space-x-2">
        <Test client:load />
      </div>
      <Code
        class="p-2 rounded"
        code={`
import Test from '@/components/widgets/Test.vue'

<Test client:load />
        `}
        lang="js"
        theme="github-dark"
      />
      <div>
        <a href="https://docs.astro.build/en/guides/integrations-guide/vue/"
          >相关文档：@astrojs/ vue
        </a>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .card {
    z-index: -1;
    @apply: rounded-lg p-4 bg-[#2d3748] text-white;

    .title {
      padding: 10px 0;
    }
    .code {
      @apply space-y-10px;
    }
  }
</style>
